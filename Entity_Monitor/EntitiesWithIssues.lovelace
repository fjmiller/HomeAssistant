card:
  content: >
    <h3> {{states('sensor.entities_with_issues') }} Entities with Issues</h3>

    {% for l in
    states.sensor.entities_with_issues.attributes.entities.split(',') %}
      {% if l != "" %} - {{ l }}{% endif %}   
    {%- endfor %}
  type: markdown
conditions:
  - entity: sensor.entities_with_issues
    state_not: '0'
type: conditional
